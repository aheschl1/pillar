#cloud-config
manage_etc_hosts: true

users:
  - name: root
    groups: sudo
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - <ssh_pub_key>

chpasswd:
  list: |
    root:toor
  expire: False

package_update: true
packages:
  - sudo
  - curl
  - vim
  - openssh-server

runcmd:
  - mkdir -p /mnt/dataiso
  - mount /dev/sr1 /mnt/dataiso
  - mkdir -p /root/<repo_name> && cp -r /mnt/dataiso/* /root/<repo_name>/
  - touch /root/setup-complete
